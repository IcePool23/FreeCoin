[Unit]
Description=Free's distributed currency daemon
After=network.target

[Service]
User=free
Group=free

Type=forking
PIDFile=/var/lib/freed/freed.pid
ExecStart=/usr/bin/freed -daemon -pid=/var/lib/freed/freed.pid \
-conf=/etc/free/free.conf -datadir=/var/lib/freed -disablewallet

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
