########################################
## <summary>
##	All of the rules required to administrate
##	a free environment
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
## <param name="role">
##	<summary>
##	Role allowed access.
##	</summary>
## </param>
## <rolecap/>
#
interface(`free_admin',`
	gen_require(`
		type free_t;
		type free_initrc_exec_t;
		type free_var_lib_t;
	')

	allow $1 free_t:process { ptrace signal_perms };
	ps_process_pattern($1, free_t)

	free_initrc_domtrans($1)
	domain_system_change_exemption($1)
	role_transition $2 free_initrc_exec_t system_r;
	allow $2 system_r;

	files_search_var_lib($1)
	admin_pattern($1, free_var_lib_t)

')

