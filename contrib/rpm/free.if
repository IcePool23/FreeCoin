
## <summary>policy for free</summary>


########################################
## <summary>
##	Transition to free.
## </summary>
## <param name="domain">
## <summary>
##	Domain allowed to transition.
## </summary>
## </param>
#
interface(`free_domtrans',`
	gen_require(`
		type free_t, free_exec_t;
	')

	corecmd_search_bin($1)
	domtrans_pattern($1, free_exec_t, free_t)
')


########################################
## <summary>
##	Execute free server in the free domain.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`free_initrc_domtrans',`
	gen_require(`
		type free_initrc_exec_t;
	')

	init_labeled_script_domtrans($1, free_initrc_exec_t)
')


########################################
## <summary>
##	Search free lib directories.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`free_search_lib',`
	gen_require(`
		type free_var_lib_t;
	')

	allow $1 free_var_lib_t:dir search_dir_perms;
	files_search_var_lib($1)
')

########################################
